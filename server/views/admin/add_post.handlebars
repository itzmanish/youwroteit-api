<h1 style="padding-left: 100px;padding-top: 50px;text-align: center;">Create Post</h1>


{{#each errors}}

<div class="alert alert-danger">

    {{message}}

</div>



{{/each}}


<form class=" mx-auto mt-5" action="/admin/posts/create" method="POST" style="
    padding-left: 200px;
    padding-right: 100px;
    width: 1050px;
    ">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="form-group">
        <label for="body">Content</label>
        <textarea name="content" cols="20" rows="10" class="form-control" id="content" placeholder="Enter Description"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Create Post</button>


</form>
